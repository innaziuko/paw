<% if @appointments.empty? %>
  <h4 class="d-flex justify-content-center mt-4"><strong>You have no appointment yet ğŸ¥º</strong></h4>
<% else %>
  <div>
    <% @appointments.each do |appointment| %>
      <% pet = Pet.find_by(id: appointment.pet_id) %>
      <a href=<%= "/pets/#{pet.id}" %> class="appointment-index-list">
        <div class="d-flex justify-content-between top-index">
          <h5 class="mb-2";><%= pet.name %></h5>
          <small>Status: <%= appointment.status %></small>
        </div>
        <p class="bottom-index"><strong>Date:</strong> <%= appointment.date.strftime('%d %B %Y') %> <strong>Time:</strong> <%= appointment.time.strftime('%l:%M%p') %></p>
      </a>
    <% end %>
  </div>
<% end %>
