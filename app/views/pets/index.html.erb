<div class="banner" style="background-color: #9787FD;">
  <div class="search-bar-container">
    <h1 class="headline_search">Start Your Search Now</h1>
    <div class="center-container">
      <div class="card-search">
      <div class="search-bar">
        <form action="/pets" method="get" class="form-inline">
          <div class="form-group">
            <select name="location" id="location" class="form-select form-control border-radius input-lg">
              <option value="">Location</option>
              <option value="France">France</option>
              <option value="Germany">Germany</option>
              <option value="Poland">Poland</option>
              <option value="Hungary">Hungary</option>
              <option value="Latvia">Latvia</option>
              <option value="Romania">Romania</option>
              <option value="Slovenia">Slovenia</option>
            </select>
          </div>
          <div class="form-group">
            <select name="species" id="species" class="form-select form-control border-radius input-lg">
              <option value="">Pet Type</option>
              <% @pet_types.each do |type| %>
              <option value= <%= type %> ><%= type.capitalize %></option>
              <% end %>
            </select>
          </div>
          <div class="form-group">
            <select name="gender" id="gender" class="form-select form-control border-radius input-lg">
              <option value="">Gender</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
            </select>
          </div>

          <div class="form-group">
            <input type="number" name="age" id="age" min="1" class="form-select form-control border-radius input-lg" placeholder="Age">
          </div>
          <div class="form-group">
            <button type="submit" class="btn-home">Search</button>
          </div>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-pets">
  <div class="row row-cols-1 row-cols-md-4 g-4 mt-3">
    <% @pets.each do |pet| %>
      <% if pet.photo.attached? %>
        <div class="col">
          <div class="card pets-view-card">
            <div class="pets-view-card pet_image">
              <%= link_to(pet) do %>
              <%= cl_image_tag pet.photo.key, width: 100, class: "pet_image" %>
            </div>
              <a href="<%= "/pets/#{pet.id}" %>" class="discover-more-link">
                <div class="card-body pet-view-info">
                  <div class="left-block">
                    <h5 class="pets-card-header"><%= pet.name %></h5>
                    <h6 class="card-text white-text"> <%= pet.breed %></h6>
                    <h6 class="card-text white-text"> <%= pet.gender %> Â· <%= pet.age %> years old</h6>
                  </div>
                <div class="pet-details">
                  <h6 class="shelter-top right-align-text">Located at</h6>
                  <div class="shelter-container">
                    <div class="shelter-content">
                      <h5 class="shelter right-align-text"><%= pet.shelter.name %></h5>
                    </div>
                  </div>
                </div>
                </div>
              </a>
          </div>
        </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
