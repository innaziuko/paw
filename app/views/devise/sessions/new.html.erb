<%# Log in %>
<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
      body {
        background-color: #f7f7f7;
        font-family: Arial, sans-serif;
      }

      .container {
        margin-top: 50px;

      }

      h2 {
        margin-bottom: 30px;
        font-size: 2.5rem;
      }

      .form-inputs {
        margin-bottom: 20px;
        text-align: left;
      }

      .form-inputs input {
        width: 55%;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
      }

      .form-actions {
        text-align: left;
      }

      .form-actions button {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 4px;
        cursor: pointer;
      }

      .form-actions button:hover {
        background-color: #0069d9;
      }

      .links {
        margin-top: 20px;
        text-align: left;
        font-size: 1.1rem;
      }

      .links a {
        color: #007bff;
      }

      .links a:hover {
        color: #0056b3;
        text-decoration: none;
      }

      input[type=checkbox] {
        width: auto;
        margin-right: 15px;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label_html: { class: "form-label" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      label_html: { class: "form-label" } %>
        </div>
        <div class="checkbox">
          <%= f.check_box :remember_me, id: "remember_me" %>
          <%= label_tag :remember_me, "Remember me" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </body>

</html>
