<div class="container-shelters">

  <div data-controller="map"
          id='map'
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
          data-map-markers-value="<%= @markers.to_json %>"
          style='width: 100%; height: 300px;'>
        </div>

  <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
      <% @shelters.each do |shelter| %>
        <% if shelter.photo.attached? %>
          <div class="col">
            <div class="card shelter-view-card">
              <div class="shelter-view-card shelter_image">
                <%= link_to(shelter) do %>
                <%= cl_image_tag shelter.photo.key, width: 100, class: "shelter_image" %>
                <% end %>
                <div class="card-body shelter-view-info">
                  <div class="w-100">
                    <h4 class="shelters-card-header"><%= shelter.name %></h4>
                    <p class="card-text-white-text">📍<%= shelter.address %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
