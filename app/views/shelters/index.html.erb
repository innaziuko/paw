<div class="container-shelters pt-5">

  <div class="row mt-3 justify-content-between">
    <div class="col-6 row p-0 pt-3">
      <% @shelters.each do |shelter| %>
        <% if shelter.photo.attached? %>
          <div class="col-6 mb-3">
            <div class="card shelter-view-card">
              <div class="shelter-view-card shelter_image">
                <%= link_to(shelter) do %>
                <%= cl_image_tag shelter.photo.key, width: 100, class: "shelter_image" %>
                <% end %>
                <div class="card-body shelter-view-info">
                  <div class="w-100">
                    <h4 class="shelters-card-header"><%= shelter.name %></h4>
                    <p class="card-text-white-text">ğŸ“<%= shelter.address %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-6 sticky-map p-0">
      <div data-controller="map"
        id='map'
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
        data-map-markers-value="<%= @markers.to_json %>"
        style='width: 100%; height: 87vh;'>
      </div>
    </div>
  </div>
</div>
