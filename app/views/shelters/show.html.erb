
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%=  cl_image_tag @shelter.photo.key, :style => 'height:100%;width:50%;' %>
    </div>
  </div>
  <br/>

  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-8">
          <h1><%= @shelter.name %></h1>
        </div>


      <div class="row text-babu">
          <hr/>
        <div class="row text-center row-space-1">
          <div class="col-md-6">
            <script src="https://cdn.lordicon.com/ritcuqlt.js"></script>
              <lord-icon
                  src="https://cdn.lordicon.com/hgdunpng.json"
                  trigger="hover"
                  colors="primary:#c69cf4,secondary:#d4d1fa,tertiary:#fad1e6,quaternary:#848484"
                  style="width:100px;height:100px">
              </lord-icon>
          </div>
          <div class="col-md-6">
           <script src="https://cdn.lordicon.com/ritcuqlt.js"></script>
            <lord-icon
                src="https://cdn.lordicon.com/nfpubwhs.json"
                trigger="hover"
                colors="primary:#d4d1fa,secondary:#3a3347,tertiary:#2ea28b,quaternary:#e7e2eb,quinary:#646e78"
                style="width:100px;height:100px">
            </lord-icon>
          </div>
        </div>
        <div class="row text-center">
          <div class="col-md-6"><%= @shelter.address %></div>
          <div class="col-md-6"><%= @shelter.phone_number %></div>
        </div>
    <hr/>
      <div class="row">
      <div class="col-md-12">
        <h3>Hello, we are <%= @shelter.name %> ðŸ‘‹ and this is our story:</h3>
        <br>
        <p><%= @shelter.description %></p>
      </div>
    </div>
    <hr/>
    </div>
  </div>
  </div>
  <p><strong>Pets</strong></p>
  <div class="container">
    <div class="row row-cols-1 row-cols-md-4 g-0">
    <% @shelter.pets.each do |pet| %>
      <div class="col">
            <div class="card card-border m-3">
                <%= link_to(pet) do %>
                <%= cl_image_tag pet.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top img-border" %>
                <% end %>
              <div class="card-body">
                <h5 class="card-title title-inline" style="color: #6096B4";><%= pet.name %></h5>
                <p class="card-text mb-0"><%= pet.species %></p>
                <p class="card-text mt-0"><%= pet.breed %></p>
                <p class="card-text mt-0"><%= "#{pet.age} years old" %></p>
                <a href=<%= "/pets/#{pet.id}" %> class="btn btn-primary btn-sm" role="button">Discover more</a>
                <button class="btn btn-secondary btn-sm"> <%= pet.status%> </button>
              </div>
            </div>
          </div>
    <% end %>
    </div>
  </div>
  <br>
  <form>
  <div class="d-flex justify-content-end">
    <div>
      <% if policy(@shelter).destroy? %>
        <%= button_to 'Delete', shelter_path(@shelter), method: :delete, class: "btn btn-outline-primary btn-lg"%>
        <% end %> </div>
        <% if policy(@shelter).edit? %>
           <%= button_to 'Edit this shelter', edit_shelter_path(@shelter), method: :get, class: "btn btn-outline-primary btn-lg" %>
        <% end %>
         <%= button_to 'Back to all the shelters', shelters_path(@shelter), method: :get, class: "btn btn-outline-primary btn-lg" %>
    </div>
  </div>
  </form>
</div>
