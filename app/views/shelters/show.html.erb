<div class="container">
<h1>Shelter <%= @shelter.name %></h1>
  <div class="banner-content">
      <%= cl_image_tag @shelter.photo.key, height: 300, width: 400, crop: :fill %>
  </div>

  <div class="banner-content">
    <p><strong>🏡 </strong> <%= @shelter.address %></p>
    <p><strong>📞 </strong> <%= @shelter.phone_number %></p>
    <p><strong>📝 </strong> <%= @shelter.description %></p>
  </div>

  <%= link_to 'Back to all shelters', shelters_path %>
  <% if policy(@shelter).destroy? %>
    <%= link_to 'Delete',
    shelter_path(@shelter),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  <% end %>

  <% if policy(@shelter).edit? %>
    <%= link_to 'Edit this shelter', edit_shelter_path(@shelter) %>
  <% end %>
</div>
</div>
