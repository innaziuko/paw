<div class="shelter_container">
  <div class="bread-crumbs">
    <div class="user-btn">
      <a href="/shelters"  role="button">← Back</a>
    </div>
    <div class="user-btn">
      <a href="/shelters" role="button">Next →</a>
    </div>
  </div>
  <div class="shelter_show_info">
<!-- Image -->
    <div class="shelter_show_img">
      <%=  cl_image_tag @shelter.photo.key, class: "shelter_avatar" %>
    </div>
<!-- Shelter Info -->
   <div class="shelter-show-general">
      <div class="shelter-show-info">
        <h1 class="shelter-name-text"><%= @shelter.name %></h1>
          <div class="owner-btn">
          <% if policy(@shelter).destroy? %>
            <%= link_to 'Delete',
            shelter_path(@shelter),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          <% end %>
          <% if policy(@shelter).edit? %>
            <%= link_to 'Edit this shelter', edit_shelter_path(@shelter) %>
          <% end %>
        </div>
        <div class="shelter-texts">
          <p class="shelter-details"><script src="https://cdn.lordicon.com/ritcuqlt.js"></script>
            <lord-icon
                src="https://cdn.lordicon.com/bjnaomnr.json"
                trigger="hover"
                colors="outline:#121331,primary:#e5d1fa,secondary:#3a3347,tertiary:#2ea28b"
                style="width:35px;height:35px">
            </lord-icon>
          <span class="shelter-detail-text"> <%= @shelter.phone_number %></span></p><br>
          <p class="shelter-details"><script src="https://cdn.lordicon.com/ritcuqlt.js"></script>
          <lord-icon
              src="https://cdn.lordicon.com/etqbfrgp.json"
              trigger="hover"
              colors="outline:#131432,primary:#d4d1fa,secondary:#a39cf4,tertiary:#b26836,quaternary:#ebe6ef"
              style="width:25px;height:25px">
          </lord-icon> <span class="shelter-detail-text"> <%= @shelter.address %></span></p><br>
        <div class="working-hour-margin">
          <h5 class="description-shelter-text"><strong>Working Hours:</strong></h5>
          <div class="flex-hour">
            <div>
              <p class="description-shelter-text">Monday</p>
              <p class="description-shelter-text">Tuesday</p>
              <p class="description-shelter-text">Wednesday</p>
              <p class="description-shelter-text">Thrusday</p>
              <p class="description-shelter-text">Friday</p>
            </div>
            <div class="time-margin">
              <p class="description-shelter-text">9am - 6pm</p>
              <p class="description-shelter-text">9am - 6pm</p>
              <p class="description-shelter-text">9am - 4pm</p>
              <p class="description-shelter-text">9am - 4pm</p>
              <p class="description-shelter-text">9am - 8pm</p>
                      </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
 <!-- Shelter Description -->
  <div class="shelter-description">
    <div class="description-text">
      <h4 class="shelter-description-header">Hello, nice to meet you <script src="https://cdn.lordicon.com/ritcuqlt.js"></script>
<lord-icon
    src="https://cdn.lordicon.com/lzwckydi.json"
    trigger="hover"
    colors="primary:#ebe6ef,secondary:#121331,tertiary:#d1e3fa,quaternary:#7166ee,quinary:#f49cc8"
    style="width:60px;height:60px;">
</lord-icon> </h4>
<br>
      <p class="shelter-description-paragraph"><%= @shelter.description %></p>
    </div>
<!-- Image -->
    <div class="shelter-description-right">
      <%= image_tag "pets_comp5.png", alt: "", width:"80%" %>
    </div>
  </div>
  <div class="container">
    <h4 class="pets-description-header">Our Pets</h4>
  </div>
<div class="container_home">
  <div class="home-content-no-margin">
    <div class="text-container mt-5">
    </div>
  </div>
  <div class="container-pets-home">
    <div class="row row-cols-1 row-cols-md-4 g-4">
      <% @shelter.pets.each do |pet| %>
        <% if pet.photo.attached? %>
          <div class="col">
            <div class="card pets-view-card">
              <div class="pets-view-card pet_image">
                <%= link_to(pet) do %>
                <%= cl_image_tag pet.photo.key, width: 100, class: "pet_image" %>
              </div>
                <a href="<%= "/pets/#{pet.id}" %>" class="discover-more-link">
                  <div class="card-body pet-view-info">
                    <div class="left-block">
                      <h5 class="pets-card-header"><%= pet.name %></h5>
                      <h6 class="card-text white-text"> <%= pet.breed %></h6>
                      <h6 class="card-text white-text"> <%= pet.gender %> · <%= pet.age %> years old</h6>
                    </div>
                  </div>
                </a>
            </div>
          </div>
           <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  </div>
  <br>
  <br>
  <br>
</div>
